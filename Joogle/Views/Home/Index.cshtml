@model Joogle.Response.TextsResponse

<div class="jumbotron">
    <h1>Joogle</h1>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-12" style="width: 100%">
                    @Html.EditorFor(model => model.Search, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Search, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }
    <div>
        @if (Model.Texts.Any())
        {
            foreach (var text in Model.Texts)
             {
                 <div>
                     <div class="col-md-6">
                         @Html.DisplayFor(model => text.Url, new {htmlAttributes = new {@class = "col-md-12"}})
                     </div>
                     <div class="col-md-6">
                         @Html.DisplayFor(model => text.Title, new {htmlAttributes = new {@class = "col-md-12"}})
                     </div>
                 </div>
             } 
        }
    </div>
</div>